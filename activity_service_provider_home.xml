<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Name Input Field -->
        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Enter Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"/>

        <!-- Service Type Spinner (Dropdown) -->
        <Spinner
            android:id="@+id/serviceTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_background"/>

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Enter Phone Number"
            android:textColor="@color/black"
            android:inputType="phone"
            android:maxLength="10"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"/>
        <!-- Experience Spinner (Dropdown) -->
        <Spinner
            android:id="@+id/experienceSpinner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_background"/>

        <!-- Short Description Input Field -->
        <EditText
            android:id="@+id/descriptionInput"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Short Description about Service"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"
            android:maxLines="6"
            android:inputType="textMultiLine"/>

        <!-- PAN Number Input Field -->
        <EditText
            android:id="@+id/panNumberInput"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Enter PAN Number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"/>

        <!-- Aadhaar Number Input Field -->
        <EditText
            android:id="@+id/aadharNumberInput"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Enter Aadhaar Number"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="16dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
