<resources>
    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- OTP Input Style -->
    <style name="OtpInputStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/app_name</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/otp_input_background</item>
        <item name="android:textSize">18sp</item>
    </style>

        <!-- Other styles -->

        <!-- Custom Dialog Style -->
        <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:windowBackground">@color/white</item> <!-- Background color -->
            <item name="android:textColor">@color/black</item> <!-- Text color -->
            <item name="android:buttonBarButtonStyle">@style/CustomDialogButtonStyle</item> <!-- Button style -->
        </style>

        <!-- Custom Dialog Button Style -->
        <style name="CustomDialogButtonStyle" parent="Widget.AppCompat.Button.Borderless">
            <item name="android:textColor">@color/white</item> <!-- Button text color -->
            <item name="android:background">@drawable/custom_button_background</item> <!-- Button background -->
        </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>